<%= form_with model: article do |form| %>
    <div>
        <%= form.label :title %>
        <%= form.text_field :title %> 
        <% article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </div>

    <div>
        <%= form.label :body %>
        <%= form.text_area :body %>
        <% article.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </div>

    <%= form.submit "Save Article" %>
<% end %>
